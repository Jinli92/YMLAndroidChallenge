<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/user_item_padding"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.jinliyu.ymlandroidchallenge.customViewClass.RoundedImageView
        android:id="@+id/user_grid_image"
        android:layout_width="@dimen/avatar_img_dimen"
        android:layout_height="@dimen/avatar_img_dimen"
        app:srcCompat="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="username"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_grid_image"/>
 </LinearLayout>


